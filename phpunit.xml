<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.5/phpunit.xsd">
    <testsuites>
        <testsuite name="Plugin Test Suite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <php>
        <ini name="error_reporting" value="-1"/>
        <ini name="display_errors" value="1"/>
        <server name="WP_TESTS_DIR" value="/tmp/wordpress-tests-lib"/>
        <server name="WP_PLUGIN_DIR" value="/tmp/wordpress/wp-content/plugins"/>
        <server name="WP_DEBUG" value="1"/>
    </php>
</phpunit>